{
  "git": {
    "commitMessage": "chore: draft release v${version}"
  },
  "github": {
    "release": true,
    "draft": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "docs/CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "section": "Maintenance"
          },
          {
            "type": "ci",
            "section": "CI/CD"
          }
        ]
      }
    }
  }
}